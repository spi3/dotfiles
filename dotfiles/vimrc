" Enable line numbers
set number

" Ignore case in search unless a capital letter is typed
set ignorecase
set smartcase

" Enable incremental search
set incsearch

" Enable line wrapping
set wrap

" Enable showing the cursor line
set cursorline

" Set tabstop
set tabstop=4

" Convert tabs to spaces
set expandtab

" Enable syntax highlighting
syntax on

set backspace=indent,eol,start
